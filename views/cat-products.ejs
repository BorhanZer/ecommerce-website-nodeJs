<%- include('_layouts/header'); -%>

    <section class="popular-items">
        <div class="container">

            <!-- Nav Card -->
            <div class="tab-content" id="nav-tabContent">
                <!-- card one -->
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="row">

                        <% products.forEach(function(p){%>
                            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                                <div class="single-popular-items mb-50 text-center">
                                    <div class="popular-img">
                                        <a href="/products/<%=p.category%>/<%=p.slug%>">
                                        <img src="/product-images/<%=p.id%>/<%=p.image%>" alt="">
                                        </a>
                                        <%if(loggedin){%>
                                            <div class="img-cap">

                                                <a href="/cart/add/<%=p.slug%>"> <span>Add to cart</span></a>

                                            </div>
                                            <%}else{%>
                                                <div class="img-cap">

                                                    <a href="/users/login"> <span>You must be logged in</span></a>

                                                </div>
                                                <%}%>

                                                    <div class="favorit-items">
                                                        <span class="flaticon-heart"></span>
                                                    </div>
                                    </div>
                                    <div class="popular-caption">
                                        <h3>
                                            <a href="/products/<%=p.category%>/<%=p.slug%>">
                                                <%= p.title%>
                                            </a>
                                        </h3>
                                        <span><%="$"+parseFloat(p.price).toFixed(2)%></span>
                                    </div>
                                </div>
                            </div>
                            <%});%>


                    </div>
                </div>
            </div>
            <!-- End Nav Card -->
        </div>
    </section>


    <%- include('_layouts/footer'); -%>